{
  "name": "WorkmobJson",
  "version": "5.1.8",
  "description": "Manage JSON",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . WorkmobJson --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"WorkmobJson\"",
    "package-linux": "electron-packager . WorkmobJson --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/png/icon.png --prune=true --out=release-builds",
    "dist": "electron-builder"
  },
  "author": "Mona Mehta",
  "license": "MIT",
  "devDependencies": {
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "electron-packager": "^15.5.1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "axios": "^0.21.1",
    "g": "^2.0.1",
    "jquery": "^3.6.0",
    "select2": "^4.1.0-rc.0"
  },
  "assets": [
    "images/**/*"
  ],
  "build": {
    "appId": "com.workmob.workmobjson",
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "images/Wlogo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}